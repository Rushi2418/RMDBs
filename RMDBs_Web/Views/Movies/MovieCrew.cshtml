@using RMDBs_Web.Models.ViewModel
@model List<MovieCastDTO2>

<h1>Hello World</h1>

<div class="movie-cast-section mt-4">
    <h4 class="text-light">Movie Cast</h4>
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var cast in Model)
            {
                <div class="col-md-6 mb-3">
                    <a asp-action="ActorDetails" asp-controller="ActorDetails" asp-route-actorId="@cast.ActorID" asp-route-movieId="@cast.MovieID"
                       class="text-decoration-none text-light">
                        <div class="card bg-dark text-light border-0 shadow-sm">
                            <div class="row g-0">
                                <div class="col-4">
                                    @if (!string.IsNullOrEmpty(cast.Img))
                                    {
                                        <img src="@Url.Content($"~/{cast.Img}")" class="img-fluid rounded-start" alt="@cast.ActorName">
                                    }
                                    else
                                    {
                                        <img src="~/Images/Home/Default.png" class="img-fluid rounded-start" alt="Default image">
                                    }
                                </div>
                                <div class="col-8">
                                    <div class="card-body">
                                        <h6 class="card-title fw-bold">@cast.ActorName</h6>
                                        <p class="card-text text-muted mb-0">@cast.Role</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No cast members available.</p>
        }
    </div>
</div>
